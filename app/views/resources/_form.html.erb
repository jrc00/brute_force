<%= form_for(@resource, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @resource.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h4>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :language, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= collection_select(:language, :id, Language.all, :id, :name) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :category, ['Docs', 'Book', 'Tutorial', 'Podcast', 'Other'], class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :link, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :link, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :completed, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :completed, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
