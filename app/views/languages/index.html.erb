<div class="text-center jumbotron">
  <h1>Choose</h1>
  <h3>Your languages from the list below</h3>
  <br/>
</div>

<div class="page-header">
  <%= link_to languages_index_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Add a language
  <% end %>
  <h1>Listing languages</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @languages) do |language| %>
            <td><%= language.name %></td>
      <% end %>
    </tbody>
  </table>
</div>

